<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" />

                    <stroke android:width="1dp" android:color="#4fa5d5" />

                    <corners
                        android:bottomLeftRadius="8.0dip"
                        android:bottomRightRadius="8.0dip"
                        android:topLeftRadius="8.0dip"
                        android:topRightRadius="8.0dip" />
                    <padding android:bottom="3dp" android:left="2dp" android:right="2dp" android:top="3dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|end" android:src="@drawable/arrow_dwn" />
                // you can use any other image here, instead of default_holo_dark_am
            </item>
        </layer-list>
    </item>
</selector>