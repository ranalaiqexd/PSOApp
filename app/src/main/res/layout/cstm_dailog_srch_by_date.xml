<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#299057"
        android:gravity="center"
        android:text="Search by Date"
        android:textColor="#ffffff"
        android:textSize="@dimen/create_nw_accnt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="From Date"
                android:textSize="14sp"/>
        <EditText
            android:id="@+id/edtTxt_frmDte"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:paddingLeft="5dp"
            android:hint="Enter Date"
            android:layout_weight="1"
            android:background="@drawable/edt_bck_gnd_green"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="To Date"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/edtTxtTo_dte"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:paddingLeft="5dp"
                android:hint="Enter Date"
                android:layout_weight="1"
                android:background="@drawable/edt_bck_gnd_green"></EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cncl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_backgrnd_bluedark"
                android:text="@string/Cancel"
                android:textColor="#ffffff"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="0.1"></View>

            <Button
                android:id="@+id/btn_srch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_backgrnd_bluedark"
                android:text="Search"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
